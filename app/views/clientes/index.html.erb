<p id="notice"><%= notice %></p>

<h1>Lista de Clientes</h1>

  <%= form_tag clientes_path, :method => 'get' do %>
       <% content_tag :label do %>
            Search term:
           <%= text_field_tag :search, params[:search] %>
           <%= submit_tag "Buscar", :name => nil %>
       <% end %>
  <% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Celular</th>
      <th>Barrio</th>
      <th>Dirección</th>
      <th>Referencia de la dirección</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Ocación</th>
      <!--<th>Valor</th>-->
      <th colspan="3">Usted puede</th>
    </tr>
  </thead>

  <tbody>
    <%= render @clientes %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>

  <%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  <br>
  Clientes: <%= @clientes.count %>